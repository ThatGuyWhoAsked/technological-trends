{
  "name": "technological-trends",
  "version": "1.0.0",
  "description": "A modern school newsletter website focused on technology trends",
  "main": "index.js",
  "scripts": {
    "start": "browser-sync start --server --files \"**/*.html, **/*.css, **/*.js\"",
    "build": "echo 'Build complete'",
    "preview": "npx serve -s",
    "deploy": "npm run build && npx gh-pages -d .",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:js": "eslint . --ext .js",
    "lint": "npm run lint:css && npm run lint:js",
    "format": "prettier --write \"**/*.{js,css,html,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "newsletter",
    "technology",
    "education",
    "web",
    "decap-cms",
    "github-pages"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "dotenv": "^16.0.3",
    "env-cmd": "^11.0.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "gh-pages": "^4.0.0",
    "prettier": "^2.7.1",
    "serve": "^14.0.1",
    "stylelint": "^14.11.0",
    "stylelint-config-standard": "^28.0.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ]
}
